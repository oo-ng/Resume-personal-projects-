<Page
    x:Class="Snake_FinalProject.FrontMenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Snake_FinalProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="Play_Game_Button" Content="Play Game" Margin="0,286,0,0" VerticalAlignment="Top" Width="98" Click="Play_Game_Button_Click" HorizontalAlignment="Center"/>
        <Button x:Name="Credits_Page_Button" Content="Credits Page" Margin="0,440,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.184,3.625" Click="Credits_Page_Button_Click" HorizontalAlignment="Center"/>
        <TextBlock x:Name="GameOverTextBlock" HorizontalAlignment="Center" Margin="0,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Baskerville Old Face" FontWeight="Bold" FontSize="72" Foreground="#FF252424">
            
            SNAKE GAME

        </TextBlock>
        <Grid.Background>
            <SolidColorBrush Color="#FFADAEBF" />
        </Grid.Background>
    </Grid>
</Page>
